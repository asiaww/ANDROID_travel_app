<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!--<android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="#364135"
            >-->

            <ImageView
                android:id="@+id/current_country_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center">
            </ImageView>

        <!--/android.support.design.widget.AppBarLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#364135"
                android:textColor="#F9F9F9"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:id="@+id/mail_button"
                android:text="WyÅ›lij maila" />

            <Button
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#364135"
                android:textColor="#F9F9F9"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:id="@+id/search_button"
                android:text="Szukaj wycieczek"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#364135"
                android:textColor="#F9F9F9"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:id="@+id/search_button_google"
                android:text="Szukaj w google"/>

        </LinearLayout>

        <TextView
                android:id="@+id/current_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="100sp"/>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_properties"
                android:orientation="vertical">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/list_properties_image_1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/list_properties_text_1" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/list_properties_image_2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/list_properties_text_2" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="45dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/list_properties_image_3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/list_properties_text_3" />

            </LinearLayout>

        <com.example.jwetesko.travelapplication.Views.ExpandableHeightGridView
                android:id="@+id/current_country_photos_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:isScrollContainer="false"
                android:numColumns="2"
                android:stretchMode="columnWidth">
        </com.example.jwetesko.travelapplication.Views.ExpandableHeightGridView>

    </LinearLayout>
</ScrollView>